@{
  var counter = 1;
}
@model List<School.Models.Entities.Students>
@if (Model is null)
{
  <p>No Student Found</p>
}
else
{

  <div class="d-flex justify-content-between align-items-center">
    <h2>Level 3 Students</h2>
    <a class="btn btn-primary" asp-action="Add" asp-controller="Student">Add New Student</a>
  </div>

  <table class="table table-striped mt-5">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>No.</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Date of Birth</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Phone</th>
        <th>City</th>
        <th>Class</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var stu in Model)
      {
        <tr>
          <td>@stu.StudentId</td>
          <td>@counter</td>
          <td>@stu.FirstName</td>
          <td>@stu.LastName</td>
          <td>@stu.DoB</td>
          <td>@stu.Gender</td>
          <td>@stu.Email</td>
          <td>@stu.Phone</td>
          <td>@stu.City</td>
          <td>@stu.Classid</td>
          <td>
            <a class=" btn btn-primary" asp-action="EditStudent" asp-controller="Student" asp-route-id="@stu.StudentId">Edit</a>
          </td>
          <td>
            <a type="button" class="btn btn-danger btn-student--delete" asp-action="DeleteStudent" asp-controller="Student" asp-route-id="@stu.StudentId">Delete</a>
          </td>
        </tr>
        counter++;
      }

    </tbody>

  </table>

}
